@model sinemaotomasyonu.Models.Koltuklar

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}



<h4>Koltuk Ekle</h4>
<br />
<br />

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="koltukAdi" class="control-label"></label>
                <input asp-for="koltukAdi" class="form-control" />
                <span asp-validation-for="koltukAdi" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="koltukÇeşidi" class="control-label"></label>
                <input asp-for="koltukÇeşidi" class="form-control" />
                <span asp-validation-for="koltukÇeşidi" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="filmID" class="control-label"></label>
                <input asp-for="filmID" class="form-control" />
                <span asp-validation-for="filmID" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Listeye geri dön..</a>
</div>


