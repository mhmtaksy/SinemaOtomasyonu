@model IEnumerable<sinemaotomasyonu.Models.Seanslar>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Seans Listesi</h1>
<br />
<br />
<p>
    <a asp-action="Create">Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.seansAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.seansSaati)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.görevliID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.seansAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.seansSaati)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.görevliID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.seansID">Güncelle</a> |
                
                <a asp-action="Delete" asp-route-id="@item.seansID">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section alt
    {
    <section id="cta" class="cta">
        <div class="container" data-aos="zoom-in">

            <div class="row">
                <div class="col-lg-9 text-center text-lg-start">
                    <h3>– Henry Mosquera;</h3>
                    <p> Sahada, evle olan herhangi bir bağlantı seni daha da zayıflatır. Size bir zamanlar uygar, yumuşak olduğunuzu hatırlatır; ve bu seni kafandan bir kurşundan daha hızlı öldürebilir.</p>
                </div>

            </div>

        </div>
    </section><!-- End Cta Section -->
}